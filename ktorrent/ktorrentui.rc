<!DOCTYPE kpartgui SYSTEM "kpartgui.dtd">
<kpartgui name="ktorrent" version="21">
<MenuBar>
  <Menu name="file"><text>&amp;File</text>
	  <Action name="file_new"/>
	  <Action name="file_open"/>
	  <Action name="file_open_silently"/>
	  <Action name="paste_url"/>
	  <Separator/>
	  <Action name="import" />
	  <Action name="import_kde3_torrents" />
	  <Separator/>
	  <Action name="ipfilter_action"/>
	  <Merge/>
  </Menu>
  <Menu name="view"><text>&amp;View</text>
	<Action name="show_group_view" />
	<Separator/>
	<ActionList name="activities_list" />
  </Menu>
  <Menu name="Downloads"><text>Downloads</text>
	<Action name="start" />
	<Action name="pause" />
	<Action name="stop" />
	<Action name="remove" />
	<Separator/>
	<Action name="start_all"/>
	<Action name="stop_all"/>
	<Separator/>
	<Action name="check_data"/>
	<Separator/>
	<Action name="queue_suspend" />
	<Separator/>
	<Action name="speed_limits"/>
  </Menu>
  <Merge/>
</MenuBar>

<Menu name="GroupsMenu"><text>GroupsMenu</text>
	<Action name="open_tab"/>
	<Separator/>
	<Action name="new_group" />
	<Action name="edit_group_name" />
	<Action name="remove_group" />
	<Separator/>
	<Action name="edit_group_policy" />
	<Separator/>
	<Merge/>
</Menu>

<Menu name="ViewMenu"><text>ViewMenu</text>
	<Action name="start" />
	<Action name="pause" />
	<Action name="stop" />
	<Action name="remove" />
	<Action name="view_remove_torrent_and_data" />
	<Separator/>
	<Action name="view_torrent_properties" />
	<Action name="speed_limits" />
	<Separator/>
	<Action name="view_add_peers" />
	<Action name="view_announce" />
	<Action name="view_rename_torrent" />
	<Action name="view_export_torrent" />
	<Action name="view_copy_url" />
	<Separator/>
	<Action name="view_move_data" />
	<Action name="check_data" />
	<Action name="view_preview" />
	<Menu name="OpenDirMenu" icon="folder-open"><text>Open Directory</text>
		<Action name="view_open_data_dir" />
		<Action name="view_open_tmp_dir" />
	</Menu>
	<Separator/>
	<Action name="view_remove_from_group" />
	<Menu name="GroupsSubMenu" icon="application-x-bittorrent"><text>Add to Group</text>
		<ActionList name="view_groups_list" />
		<Separator/>
		<Action name="view_add_to_new_group" />
	</Menu>
	<Separator/>
	<Menu name="ColumnsMenu">
		<text>Configure Columns</text>
		<title>Columns</title>
		<ActionList name="view_columns_list" />
	</Menu>
	<Separator/>
	<Merge/>
</Menu>

<ToolBar name="mainToolBar" noMerge="1"><text>Main</text>
	<ActionList name="activities_list" />
	<Separator/>
	<Action name="file_new"/>
    <Action name="file_open"/>
	<Action name="paste_url"/>
	<Action name="ipfilter_action"/>
</ToolBar>

<ToolBar name="TorrentsToolBar" noMerge="1"><text>Torrents</text>
	<Action name="show_group_view" />
	<Separator/>
	<Action name="start"/>
	<Action name="pause" />
	<Action name="stop"/>
	<Action name="remove"/>
	<Action name="start_all"/>
	<Action name="stop_all"/>
	<Separator/>
	<Action name="queue_suspend" />
</ToolBar>
</kpartgui>
